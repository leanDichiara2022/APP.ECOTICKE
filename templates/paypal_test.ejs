<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Prueba de Suscripción PayPal</title>
    <script src="https://www.paypal.com/sdk/js?client-id=<%= clientId %>&vault=true&intent=subscription"></script>
</head>
<body>
    <h1>Suscribirse a un Plan</h1>

    <div id="paypal-button-container"></div>

    <script>
        paypal.Buttons({
            createSubscription: function(data, actions) {
                return actions.subscription.create({
                    'plan_id': 'AXsEZxuE4vymCQrDoyceY_Md91zb3e60wIYfiMAdxzjCY9PIY7vq1VZNBLP3hvXBnjpwn-Jqbq10YchO' // <-- Reemplazá con tu ID real del plan en PayPal
                });
            },
            onApprove: function(data, actions) {
                alert('¡Suscripción completada! ID: ' + data.subscriptionID);
                // Podés hacer una llamada al servidor si querés guardar el estado
            }
        }).render('#paypal-button-container');
    </script>
</body>
</html>
